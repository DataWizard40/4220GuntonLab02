<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="99.0" minWidth="160.0" prefHeight="517.0" prefWidth="526.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.westga.devops.a7.view.MainWindow">
   <children>
      <ListView fx:id="itemsListView" layoutX="30.0" layoutY="59.0" onMouseClicked="#selectItem" prefHeight="364.0" prefWidth="200.0" />
      <Label layoutX="94.0" layoutY="30.0" text="Shopping List" />
      <TextField fx:id="nameTextField" layoutX="315.0" layoutY="119.0" />
      <Label layoutX="360.0" layoutY="88.0" text="Item Name" />
      <Button fx:id="addItemButton" layoutX="357.0" layoutY="168.0" mnemonicParsing="false" onAction="#addItem" text="Add Item" />
      <TextField fx:id="quantityTextField" layoutX="316.0" layoutY="309.0" />
      <Label layoutX="353.0" layoutY="280.0" text="Item Quantity" />
      <Button fx:id="updateQuantityButton" layoutX="339.0" layoutY="360.0" mnemonicParsing="false" onAction="#updateQuantity" text="Update Quantity" />
      <Button fx:id="removeItemButton" layoutX="87.0" layoutY="435.0" mnemonicParsing="false" onAction="#removeItem" text="Remove Item" />
      <Label fx:id="errorLabel" layoutX="199.0" layoutY="439.0" text="Errors will show up here." textFill="#e71010" />
   </children>
</AnchorPane>
